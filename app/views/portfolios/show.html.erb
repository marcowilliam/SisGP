<div id="page-wrapper">
    <p id="notice"><%= notice %></p>
    <br>
    <div class="row">
                <div class="col-lg-12">
                <div style="float: right; margin-right: 1%; margin-top: 1%">
                  <% if @portfolio.donos.include?(current_user)  %> 
                    <%= link_to raw("<i class='fa fa-pencil' aria-hidden='true'></i>"), edit_portfolio_path(@portfolio),:class=>"btn btn-info btn-circle btn-lg"  %>

                    <%= link_to raw("<i class='fa fa-times'></i>"), @portfolio, method: :delete, data: { confirm: "Deseja mesmo excluir o portfolio '#{@portfolio.nome}' ?"}, :class=>"btn btn-danger btn-circle btn-lg"  %>
                  <% end %>
                 </div>
                <div class="jumbotron">
                    
                   
                   <center>
                        <h2><%= @portfolio.nome %></h2>
                        <p>
                        <%= @portfolio.descricao %>
                        </p>
                        <br><br>
                        <p><strong>Data inicial:</strong>
                        <%= @portfolio.dataInicio %>
                        
                        <strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Data final:</strong>
                         <%= @portfolio.dataFim %></p>
                         </center>
                         <p style="margin-left: 24.8%;"><strong>Donos:</strong>
                         <% @portfolio.donos.each.with_index do |dono, index| %>
                            <% if (index > 0) %>
                            , 
                            <% end %>
                            <%= dono.nome %>
                         <% end %>
                         </p>
                         
                         
                    </div>
                </div>
                <!-- /.col-lg-12 -->
      </div>

      
      <div class="row">
      <div class="col-lg-12">
                    <div class="panel panel-default">

                        <div class="panel-heading" style="padding-bottom: 1.5%;">
                       <center>
                        <strong>
                            projetos
                            </strong>
                        </center>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                <% if @portfolio.projetos.size > 0 %>
                                    <thead>
                                        <tr>
                                            <th>Título</th>
                                            <th>Data Inicial</th>
                                            <th>Data Final</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <% @portfolio.projetos.each do |projeto| %>
                                        <tr>
                                            <td><%= link_to projeto.nome,projeto %></td>
                                            <td><%= projeto.dataInicio %></td>
                                            <td><%= projeto.dataFim %></td>
                                        </tr>
                                     <%end%>
                                    </tbody>
                                  <% else %>
                                   <div class="alert alert-success alert-info" >
                                      <center>
                                      Este portfolio não possui projetos
                                      </center>
                                      </div>
                                   <% end %>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                </div>
 
    </div>
</div>
