<p id="notice"><%= notice %></p>

<h1>Listing Atividades</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Datainicio</th>
      <th>Datafim</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atividades.each do |atividade| %>
      <tr>
        <td><%= atividade.nome %></td>
        <td><%= atividade.descricao %></td>
        <td><%= atividade.dataInicio %></td>
        <td><%= atividade.dataFim %></td>
        <td><%= atividade.processo %></td>
        <td><%= atividade.responsaveis.each do |responsavel| %>
              <%= responsavel.nome %><br>
        </td>
        <td><%= link_to 'Show',processo_atividade_path(atividade) %></td>
        <td><%= link_to 'Edit' %></td>
        <!-- <td><%= link_to 'Destroy',  {method: :delete} %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

