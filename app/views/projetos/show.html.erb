<div id="page-wrapper">
	<p id="notice"><%= notice %></p>
	<br>
	<div class="row">
                <div class="col-lg-12">
                <div style="float: right; margin-right: 1%; margin-top: 1%">
                <% if @projeto.donos.include?(current_user)  %> 
              		<%= link_to raw("<i class='fa fa-pencil' aria-hidden='true'></i>"), edit_projeto_path(@projeto),:class=>"btn btn-info btn-circle btn-lg"  %>

              		<%= link_to raw("<i class='fa fa-times'></i>"), @projeto, method: :delete, data: { confirm: "Deseja mesmo excluir o projeto '#{@projeto.nome}' ?"}, :class=>"btn btn-danger btn-circle btn-lg"  %>
                  <% end %>
                 </div>
                <div class="jumbotron">
                    
                   
                   <center>
                        <h2><%= @projeto.nome %></h2>
                        <p>
                        <%= @projeto.descricao %>
                        </p>
                        <br><br>
                        <p><strong>Data inicial:</strong>
	  					<%= @projeto.dataInicio %>
	  					
	  					<strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Data final:</strong>
	 					 <%= @projeto.dataFim %></p>
	 					 </center>
	 					 <p style="margin-left: 24.8%;"><strong>Donos:</strong>
	 					 <% @projeto.donos.each.with_index do |dono, index| %>
	 					 	<% if (index > 0) %>
	 					 	, 
	 					 	<% end %>
	 					 	<%= dono.nome %>
	 					 <% end %>
	 					 </p>
	 					 
	 					 
                    </div>
                </div>
                <!-- /.col-lg-12 -->
      </div>

      
      <div class="row">
      <div class="col-lg-12">
                    <div class="panel panel-default">

                        <div class="panel-heading" style="padding-bottom: 1.5%;">
                       <center>
                        <strong>
                            Processos
                            </strong>
                        </center>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                <% if @projeto.processos.size > 0 %>
                                    <thead>
                                        <tr>
                                            <th>Título</th>
                                            <th>Data Inicial</th>
                                            <th>Data Final</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    <% @projeto.processos.each do |processo| %>
                                     	<tr>
                                            <td><%= link_to processo.nome,processo %></td>
                                            <td><%= processo.dataInicio %></td>
                                            <td><%= processo.dataFim %></td>
                                        </tr>
                                     <%end%>
                                    </tbody>
                                  <% else %>
                                   <div class="alert alert-success alert-info" >
                                      <center>
                                      Este projeto não possui processos
                                      </center>
                                      </div>
                                   <% end %>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                </div>
 
	</div>
</div>
