<%= form_for :session, url: sign_in_path do |f| %>
<div class="container">
	<div class="input-field col s12 center">
		
            <%=image_tag("gears.png", width:'10%')%>
            <h4 style="color:gray;"> SisGP </h4><br>
            
          </div>
	<div class="input-field col s12">
		<i class="mdi-social-person-outline prefix"></i>
		<%= f.label :email %><br />
		<%= f.email_field :email, autofocus: true %>
	</div>

	<div class="row margin">
		<div class="input-field col s12">
	 		<i class="mdi-action-lock-outline prefix"></i>
			<%= f.label :password %><br />
			<%= f.password_field :password, autocomplete: "off" %>
		</div>
	</div>


	 <div class="row">
		<div class="input-field col s12">
			<div class="btn waves-effect waves-light col s12">
			
			<%= f.submit "Log in" %>
			</div>
		</div>
	 </div>
	<p>NÃ£o possui login? <%= link_to "Crie sua conta agora mesmo!", new_usuario_path %></p>
<% end %>
</div>


